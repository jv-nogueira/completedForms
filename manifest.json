{
    "manifest_version": 3,
    "name": "Modal Extension",
    "version": "1.0",
    "description": "Cria uma modal ao pressionar F2",
    "permissions": ["activeTab"],
    "host_permissions": ["http://*/*", "https://*/*"],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["modal.html", "modal.css"],
        "matches": ["<all_urls>"]
      }
    ]
  }
  